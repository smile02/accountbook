<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="saving">
	<select id="savingList" resultType="saving">
		select * from saving order by inputreg desc
	</select>
	
	<insert id="savingAdd" parameterType="saving">
		insert into saving values
			(seq_saving_idx.nextval,#{nickname}, #{regbank}, #{regname}
			,#{startreg}, #{endreg},0,#{inputreg})
	</insert>	
	
	<select id="savingPayList" parameterType="int" resultType="savingPay">
		select * from savingpay where idx = #{idx} order by regdate desc
	</select>
	
	<insert id="savingPayAdd" parameterType="savingPay">
		insert into savingpay values
			(seq_savingpay_num.nextval, #{idx}, #{nickname}, #{regdate},
				#{paybank}, #{payname}, #{price})
	</insert>
	
	<update id="savingSumUpdate" parameterType="map">
		update saving set price = price + #{price}
			where idx = #{idx}
	</update>
</mapper>