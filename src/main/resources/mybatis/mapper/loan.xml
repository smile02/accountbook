<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="loan">
	<select id="loanList" parameterType="String" resultType="loan">
		select * from loan where nickname = #{value}
	</select>
	
	<insert id="loanAdd" parameterType="loan">
		insert into loan values(seq_loan_idx.nextval,#{nickname},#{loan_place},#{loan_purpose},
						#{loan_price}, #{loan_date}, sysdate)
	</insert>
	
	<select id="loanSelectOne" parameterType="int" resultType="loan">
		select * from loan where idx = #{value}
	</select>
	
	<update id="loanPriceUpdate" parameterType="map">
		update loan set loan_price = #{loan_price}
			where idx = #{idx}
	</update>
	
	<update id="loanMod" parameterType="loan">
		update loan set loan_place = #{loan_place}, loan_purpose = #{loan_purpose}, loan_date = #{loan_date}
				,loan_price = #{loan_price}
				where idx = #{idx}
	</update>
	
	<delete id="loanDel" parameterType="int">
		delete from loan where idx = #{value}
	</delete>
	
	
	<select id="loanSum" parameterType="String" resultType="int">
		select nvl(sum(price),0) as sum from loanPay where nickname = #{value}
	</select>
</mapper>