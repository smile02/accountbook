<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="loan">
	<select id="loanList" parameterType="String" resultType="loan">
		select * from loan where nickname = #{value}
	</select>
	
	<insert id="loanAdd" parameterType="loan">
		insert into loan values(seq_loan_idx.nextval,#{nickname},#{loan_place},#{loan_purpose},
						#{loan_price}, #{loan_date}, sysdate)
	</insert>
</mapper>