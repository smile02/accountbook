<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="income">
	<select id="incomeList" resultType="income">
		select * from income order by regdate desc,idx desc
	</select>	
	<insert id="incomeAdd" parameterType="income">
		insert into income values
			(seq_income_idx.nextval,#{nickname},#{regdate},
			#{comments},#{ways},
			#{memo},#{price})
	</insert>
	<select id="incomeView" parameterType="int" resultType="income">
		select * from income where idx = #{value}
	</select>
	<delete id="incomeDel" parameterType="int">
		delete from income where idx = #{value}
	</delete>
</mapper>